<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FractalExplorerMAUI.MainPage" Title="Fractl Explorer" BackgroundColor="Black">
    <Grid>
        <Image x:Name="imageHost"/>

        <ContentView VerticalOptions="End" HorizontalOptions="Center" Padding="0,0,2,2">
            <Label x:Name="timer"
                  TextColor="White" FontSize="20" />
        </ContentView>
        <Button
           
            x:Name="btnGenerateMandelbrot"
            VerticalOptions="Start"
                HorizontalOptions="Center"
                Text="Generate"
                Clicked="btnGenerateMandelbrot_Clicked"/>
    </Grid>

</ContentPage>

